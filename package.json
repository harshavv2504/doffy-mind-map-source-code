{
  "name": "doffy",
  "private": true,
  "version": "1.0.0",
  "description": "A powerful, highly customizable mind mapping application built with React and React Flow",
  "type": "module",
  "keywords": [
    "mind-mapping",
    "react",
    "react-flow",
    "visualization",
    "diagrams",
    "brainstorming",
    "knowledge-management",
    "interactive",
    "canvas",
    "nodes"
  ],
  "author": {
    "name": "DO.ffy Team",
    "email": "contact@doffy.com",
    "url": "https://github.com/your-username/doffy"
  },
  "license": "MIT",
  "homepage": "https://your-username.github.io/doffy",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/doffy.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/doffy/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "test": "echo \"No tests specified\" && exit 0",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,md}\"",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.5",
    "@reactflow/node-resizer": "^2.2.14",
    "html-to-image": "^1.11.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "reactflow": "^11.11.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.3.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.4",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}